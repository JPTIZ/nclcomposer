//DATATYPES
datatype(ID, ^[a-zA-Z][a-zA-Z0-9_]*)
datatype(file,[a-zA-Z0-9-\.]+[a-zA-Z0-9-_\.]+\.[a-zA-Z0-9]+$)
datatype(fileHTML,[a-zA-Z0-9-\.]+[a-zA-Z0-9-_\.]+\.html$)
datatype(explicitdur, ^(^([0-1][0-9]|[2][0-3])(:([0-5][0-9])(,[0-9][0-9]?)?){1,2}$|^[0-9]+[s]$)$)
datatype(percentual, ^[0-9]+(,[0-9][0-9]?)?%$)
datatype(device,^(systemScreen[ ]?[(][0-9]+[)]|(systemAudio)[ ]?[(][0-9]+[)])$)
datatype(int, ^[0-9]+)
datatype(string, .*)
datatype(percentORpixel, ^[0-9]+([0-9]*px|((,[0-9][0-9]?)?%))$)
datatype(url, ^(http[s]?://|ftp://)?(www\.)?[a-zA-Z0-9-\.]+\.(com|org|net|mil|edu|ca|co.uk|com.au|gov|br)$)
datatype(instance, ^(instSame|gradSame|new)$)
datatype(typee, )
datatype(coord, )
datatype(timeframe,)
datatype(namee, )
